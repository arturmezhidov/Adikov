@using System.Web.Mvc.Html
@using Adikov.ViewModels.ProductAttribute

@model ProductAttributeIndexViewModel

@{
    ViewBag.Title = "Атрибуты";
}

@if (Model.EditProductAttribute == null)
{
    @Html.Partial("_AddProductAttributePortlet", Model.NewProductAttribute)
}
else
{
    @Html.Partial("_EditProductAttributePortlet", Model.EditProductAttribute)
}

@Html.Partial("_ProductAttributeListPortlet", Model)

@section styles {
    <link href="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css">
}

@section scripts
{
    <script src="~/Content/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>
    <script src="~/Content/assets/pages/scripts/product-attribute.js"></script>
}
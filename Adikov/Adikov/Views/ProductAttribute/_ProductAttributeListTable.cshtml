 

@using Adikov.Domain.Models
@model IEnumerable<Adikov.ViewModels.ProductAttribute.ProductAttributeViewModel>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th> # </th>
            <th> Название </th>
            <th> Тип </th>
            <th>
                <div class="pull-right"> Действия </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;

            <tr>
                <td> @i </td>
                <td> @item.Name </td>
                <td> @TypeToLabel(item.Type) </td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Index", new { id = item.Id })" class="btn btn-sm btn-info">
                            <i class="fa fa-pencil"></i>
                            Редактировать
                        </a>
                        @if (item.IsDeleted)
                        {
                            <a href="@Url.Action("Recovery", new {id = item.Id})" class="btn btn-sm btn-success">
                                <i class="icon-action-undo"></i>
                                Восстановить
                            </a>
                        }
                        else
                        {
                            @LinkHelper.ConfirmationLink(
                                "Удалить",
                                Url.Action("Delete", new {id = item.Id}),
                                "btn btn-sm btn-danger",
                                "fa fa-trash-o")
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@helper TypeToLabel(ProductAttributeType type)
{
    switch (type)
    {
        case ProductAttributeType.IntNumber:
        {
            <span class="label label-sm label-warning"> Целое число </span>
            break;
        }
        case ProductAttributeType.DoubleNumber:
        {
            <span class="label label-sm label-primary"> Вещественное число </span>
            break;
        }
        case ProductAttributeType.String:
        {
                <span class="label label-sm label-success"> Строка </span>
            break;
        }
        case ProductAttributeType.Status:
        {
            <span class="label label-sm label-success"> Статус </span>
            break;
        }
    }
}
@model Adikov.ViewModels.Contacts.KeepInTouchViewModel

<div class="c-contact">
    <div class="c-content-title-1">
        <h3 class="uppercase">@Model.Title</h3>
        <div class="c-line-left bg-dark"></div>
        <p class="c-font-lowercase">@Model.Description</p>
    </div>
    <form id="keep-in-touch-form">
        <div class="form-group">
            <input type="text" name="Username" placeholder="* Ваше имя" class="form-control input-md">
        </div>
        <div class="form-group">
            <input type="email" name="Email" placeholder="* Email" class="form-control input-md">
        </div>
        <div class="form-group">
            <input type="text" name="Phone" placeholder="Телефон" class="form-control input-md">
        </div>
        <div class="form-group">
            <textarea rows="8" name="Content" placeholder="* Введите сообщение ..." class="form-control input-md"></textarea>
        </div>
        <button type="submit" class="btn grey">Отправить</button>
    </form>
</div>
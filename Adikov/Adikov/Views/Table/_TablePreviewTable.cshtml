@model Adikov.ViewModels.Tables.TableDetailsViewModel

<h4>Предпросмотр:</h4>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th> # </th>
        @{
            int i = 0;
        }
        @foreach (var item in Model.Columns)
        {
            i++;

            <th> @item.Name </th>
        }
    </tr>
    </thead>
</table>
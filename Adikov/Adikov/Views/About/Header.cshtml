@model Adikov.ViewModels.About.AboutHeaderEditViewModel

@{
    ViewBag.Title = "Баннер";
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-pencil font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase"> Настройки баннера </span>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Header", "About", null, FormMethod.Post, new { id = "category-form", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Заголовок </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Введите текст заголовка" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Подзаголовок </label>
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.SubTitle, new { @class = "form-control", placeholder = "Введите текст подзаголовка", rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Текст кнопки </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.LinkText, new { @class = "form-control", placeholder = "Введите текст кнопки" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Ссылка кнопки </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.LinkUrl, new { @class = "form-control", placeholder = "Введите ссылку кнопки" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Картинка фона </label>
                    <div class="col-md-4">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                <img src="@Model.BackgroundImageUrl" alt="" />
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 90%;"> </div>
                            <div>
                                <span class="btn default btn-file">
                                    <span class="fileinput-new"> Выбрать </span>
                                    <span class="fileinput-exists"> Изменить </span>
                                    <input type="file" name="BackgroundImage" class="ignore">
                                </span>
                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Удалить </a>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green">Сохранить</button>
                        <a class="btn default" href="@Url.Action("Index")">Отмена</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section styles {
    <link href="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css">
}

@section scripts
{
    <script src="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>
}
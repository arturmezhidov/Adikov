@model Adikov.ViewModels.About.AboutCompanyViewModel

<div class="row margin-bottom-40">
    <div class="col-lg-6">
        <div class="portlet light about-text">
            <h4>
                <i class="fa fa-check icon-info"></i> @Model.Title
            </h4>
            <p>
                @Html.Raw(Model.HtmlContent)
            </p>
        </div>
    </div>
    <div class="col-lg-6">
        <iframe src="http://www.youtube.com/embed/@Model.VideoUrl" style="width:100%; height:500px;border:0" allowfullscreen=""> </iframe>
    </div>
</div>
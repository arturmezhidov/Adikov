@model Adikov.ViewModels.Columns.ColumnViewModel

@using (Html.BeginForm("Add", "Column", null, FormMethod.Post, new { id = "column-form", @class = "form-horizontal", role = "form" }))
{
    <div class="form-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Название <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Название" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Тип <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                <select class="form-control" data-val="true" data-val-required="Требуется поле Type." id="Type" name="Type">
                    <option selected="selected" value="0">Целое число</option>
                    <option value="1">Вещественное число</option>
                    <option value="2">Строка</option>
                    <option value="3">Статус</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green">Добавить</button>
                <button type="reset" class="btn default">Очистить</button>
            </div>
        </div>
    </div>
}
@model Adikov.ViewModels.Messages.MessagesViewModel

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-envelope-letter font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase"> @ViewBag.Title </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-2">
                <ul class="nav nav-tabs tabs-left">
                    <li class="active">
                        <a href="#tab_1" data-toggle="tab" aria-expanded="true"> <i class="icon-envelope-letter"></i> Новые </a>
                    </li>
                    <li>
                        <a href="#tab_2" data-toggle="tab" aria-expanded="false"> <i class="icon-envelope-open"></i> Прочитанные </a>
                    </li>
                    <li>
                        <a href="#tab_3" data-toggle="tab" aria-expanded="false"> <i class="icon-trash"></i> Удаленные </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 col-sm-10 col-xs-10">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab_1">
                        @Html.Partial("_MessagesList", Model.NewMessages)
                    </div>
                    <div class="tab-pane fade" id="tab_2">
                        @Html.Partial("_MessagesList", Model.ReadMessages)
                    </div>
                    <div class="tab-pane fade" id="tab_3">
                        @Html.Partial("_MessagesList", Model.DeletedMessages)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
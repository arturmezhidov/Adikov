@model Adikov.ViewModels.Blog.IndexViewModel
@{
    ViewBag.Title = "Блог";
}

<div class="blog-page blog-content-1">
    <div class="row">
        <div class="col-md-6">
            @for (int i = 0; i <= Model.Blogs.Count; i += 2)
            {
                var item = Model.Blogs.ElementAtOrDefault(i);

                if (item != null)
                {
                    @Html.Partial("_BlogPreview", item)
                }
            }
        </div>
        <div class="col-md-6">
            @for (int i = 0; i <= Model.Blogs.Count; i += 2)
            {
                var item = Model.Blogs.ElementAtOrDefault(i + 1);

                if (item != null)
                {
                    @Html.Partial("_BlogPreview", item)
                }
            }
        </div>
    </div>
</div>

@section styles {
    <link href="~/Content/assets/pages/css/blog.min.css" rel="stylesheet" type="text/css" />
}
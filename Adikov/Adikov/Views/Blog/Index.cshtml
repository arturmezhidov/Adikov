@model Adikov.ViewModels.Blog.IndexViewModel
@{
    ViewBag.Title = "Блог";
}

<div class="blog-page blog-content-1">
    @for (int i = 0; i <= Model.Blogs.Count; i += 2)
    {
        var item1 = Model.Blogs.ElementAtOrDefault(i);
        var item2 = Model.Blogs.ElementAtOrDefault(i + 1);

        <div class="row">
            <div class="col-md-6">
                @if (item1 != null)
                {
                    @Html.Partial("_BlogPreview", item1)
                }
            </div>
            <div class="col-md-6">
                @if (item2 != null)
                {
                    @Html.Partial("_BlogPreview", item2)
                }
            </div>
        </div>
    }
</div>

@section styles {
    <link href="~/Content/assets/pages/css/blog.min.css" rel="stylesheet" type="text/css" />
}
@using Adikov.Domain.Models

@model IEnumerable<ProductCategory>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th> # </th>
            <th> Иконка </th>
            <th> Название </th>
            <th> Тип </th>
            <th>
                <div class="pull-right"> Действия </div>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var category in Model)
        {
            i++;

            <tr>
                <td> @i </td>
                <td> <i class="@category.Icon"></i> </td>
                <td> @category.Name </td>
                <td> @CategoryTypeToLabel(category.Type) </td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Edit", new {id = category.Id})" class="btn btn-sm btn-info">
                            <i class="fa fa-pencil"></i>
                            Редактировать
                        </a>
                        @if (category.IsDeleted)
                        {
                            <a href="@Url.Action("Recovery", new {id = category.Id})" class="btn btn-sm btn-success">
                                <i class="icon-action-undo"></i>
                                Восстановить
                            </a>
                        }
                        else
                        {
                            @LinkHelper.ConfirmationLink(
                                "Удалить",
                                Url.Action("Delete", new {id = category.Id}),
                                "btn btn-sm btn-danger",
                                "fa fa-trash-o")
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@helper CategoryTypeToLabel(ProductCategoryType type)
{
    switch (type)
    {
        case ProductCategoryType.Single:
        {
            <span class="label label-sm label-warning"> Одиночка </span>
            break;
        }
        case ProductCategoryType.Identical:
        {
            <span class="label label-sm label-primary"> Идентичные </span>
            break;
        }
        case ProductCategoryType.Default:
        {
            <span class="label label-sm label-success"> Разные </span>
            break;
        }
    }
}
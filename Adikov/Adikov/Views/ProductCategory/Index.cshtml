@using System.Web.Mvc.Html
@using Adikov.ViewModels.ProductCategory

@model ProductCategoryIndexViewModel

@{
    ViewBag.Title = "Категории";
}

@if (Model.EditProductCategory == null)
{
    @Html.Partial("_AddProductCategoryPortlet", Model.NewProductCategory)
}
else
{
    @Html.Partial("_EditProductCategoryPortlet", Model.EditProductCategory)
}

@Html.Partial("_ProductCategoryListPortlet", Model)

@section scripts
{
    <script src="~/Content/assets/global/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js"></script>
}
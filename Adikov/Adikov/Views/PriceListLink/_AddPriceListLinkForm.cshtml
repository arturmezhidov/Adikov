@model Adikov.ViewModels.PriceListLinks.AddPriceListLinkViewModel

@using (Html.BeginForm("Add", "PriceListLink", null, FormMethod.Post, new { id = "price-list-link-form", @class = "form-horizontal", role = "form" }))
{
    <div class="form-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Текст ссылки <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Text, new { @class = "form-control", placeholder = "Введите текст ссылки" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Ссылка <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "Введите ссылку" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Описание ссылки</label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Введите описание ссылки" })
            </div>
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green">Добавить</button>
                <button type="reset" class="btn default">Очистить</button>
            </div>
        </div>
    </div>
}
@model Adikov.ViewModels.Product.ProductAddViewModel

@{
    ViewBag.Title = "Добавление продукта";
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase"> Добавление нового продукта </span>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Add", "Product", new { categoryId = Model.CategoryId }, FormMethod.Post, new { id = "product-category-form", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(m => m.CategoryId)
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Название <span class="required" aria-required="true"> * </span></label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Название" })
                        @Html.ValidationMessageFor(m => m.Name, "Поле обязательно для заполнения", new { @class = "help-block help-block-error font-red" })
                    </div>
                </div>
                <div class="mt-repeater">
                    <div data-repeater-list="group-a">
                        <div data-repeater-item>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Столбец #</label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(m => m.Attributes, Model.AttributesListItems, new { @class = "form-control", fieldname = "Attributes" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-4">
                            <a href="javascript:;" data-repeater-create="" class="btn btn-success mt-repeater-add pull-right">
                                <i class="fa fa-plus"></i> Добавить столбец
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green">Добавить</button>
                        <button type="reset" class="btn default">Очистить</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    <script src="~/Content/assets/global/plugins/jquery-repeater/jquery.repeater.js"></script>
    <script src="~/Content/assets/pages/scripts/common/form-repeater.js"></script>
}
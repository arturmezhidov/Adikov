@model Adikov.ViewModels.Products.ProductAddViewModel

@using (Html.BeginForm("Add", "Product", null, FormMethod.Post, new { id = "product-form", @class = "form-horizontal", role = "form" }))
{
    <div class="form-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Название <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Название" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Категория <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.CategoryId, Model.CategorySelectListItems, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Таблица <span class="required" aria-required="true"> * </span></label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.TableId, Model.TableSelectListItems, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <hr />
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green">Добавить</button>
                <button type="reset" class="btn default">Очистить</button>
            </div>
        </div>
    </div>
}
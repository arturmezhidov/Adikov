@model Adikov.Domain.Queries.FaqRequests.FaqRequests

<div class="portlet light ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-question-circle font-green-sharp"></i>
            <span class="caption-subject bold font-green-sharp uppercase">Принятые запросы</span>
            @if (Model.ApprovedRequestsCount == 0)
            {
                <span class="caption-helper">нет принятых запросов...</span>
            }
            else
            {
                <span class="badge badge-success badge-roundless"> @Model.ApprovedRequestsCount </span>
            }
        </div>
        <div class="tools">
            <a href="" class="collapse" data-original-title="" title="Свернуть/Развернуть"> </a>
            <a href="" class="fullscreen" data-original-title="" title="На полный экран"> </a>
            <a href="" class="remove" data-original-title="" title="Удалить"> </a>
        </div>
    </div>
    <div class="portlet-body">
        @Html.Partial("_FaqRequestList", Model.ApprovedRequests)
    </div>
</div>